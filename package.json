{
  "name": "schummar-translate",
  "repository": "schummar/schummar-translate",
  "version": "1.9.0",
  "description": "TypeScript powered translation library for React and Node.js.",
  "keywords": [
    "typescript",
    "react",
    "node",
    "translation",
    "i18n",
    "localization",
    "type checking",
    "autocomplete",
    "IntelliSense"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "exports": {
    ".": {
      "import": "./dist/es/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/es/index.js"
    },
    "./react": {
      "import": "./dist/es/react.js",
      "require": "./dist/cjs/react.js",
      "default": "./dist/es/react.js"
    }
  },
  "types": "dist/types/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "dist/types/index.d.ts"
      ],
      "react": [
        "dist/types/react/index.d.ts"
      ]
    }
  },
  "author": {
    "name": "Marco Schumacher",
    "email": "marco@schumacher.dev"
  },
  "license": "MIT",
  "scripts": {
    "start": "run-p start:*",
    "start:compile": "tsc -p tsconfig-cjs.json --watch",
    "start:example": "npm --prefix example start",
    "build": "npm-run-all -s build:clean -p build:compile:* -s build:cjsPackage",
    "build:clean": "rimraf \"dist/**/*\"",
    "build:compile:js": "vite build",
    "build:compile:types": "tsc",
    "build:cjsPackage": "echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "lint": "run-p lint:*",
    "lint:prettier": "prettier src -l",
    "lint:eslint": "eslint src",
    "lint:tsc": "tsc --noEmit --emitDeclarationOnly false",
    "prepublishOnly": "run-p lint test build",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:export": "vitest run --coverage --reporter=verbose --reporter=junit --outputFile=test/testResults.xml"
  },
  "dependencies": {
    "intl-messageformat": "^9.11.4"
  },
  "peerDependencies": {
    "@types/react": ">=16.8.0",
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.4",
    "@types/node": "^17.0.22",
    "@types/react": "^17.0.41",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "c8": "^7.11.0",
    "eslint": "^8.11.0",
    "jsdom": "^19.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.0",
    "react": "17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2",
    "vite": "^2.8.6",
    "vitest": "^0.7.7"
  },
  "files": [
    "dist",
    "react.d.ts",
    "react.js"
  ]
}
