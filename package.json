{
  "name": "schummar-translate",
  "repository": "schummar/schummar-translate",
  "version": "1.5.0",
  "description": "TypeScript powered translation library for React and Node.js.",
  "keywords": [
    "typescript",
    "react",
    "node",
    "translation",
    "i18n",
    "localization",
    "type checking",
    "autocomplete",
    "IntelliSense"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "default": "./dist/esm/index.js"
    },
    "./react": {
      "import": "./dist/esm/react/index.js",
      "require": "./dist/cjs/react/index.js",
      "default": "./dist/esm/react/index.js"
    }
  },
  "author": {
    "name": "Marco Schumacher",
    "email": "marco@schumacher.dev"
  },
  "license": "MIT",
  "scripts": {
    "start": "run-p start:*",
    "start:compile": "tsc -p tsconfig-cjs.json --watch",
    "start:example": "npm --prefix example start",
    "build": "npm-run-all -s build:clean -p build:compile:*",
    "build:clean": "rimraf dist/**",
    "build:compile:esm": "tsc",
    "build:compile:cjs": "tsc -p tsconfig-cjs.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "lint": "run-p lint:*",
    "lint:prettier": "prettier src -l",
    "lint:eslint": "eslint src",
    "lint:tsc": "tsc --noEmit",
    "prepublishOnly": "run-s build",
    "test": "cd test && ava -v",
    "test-watch": "cd test && ava --watch",
    "coverage": "nyc --include src --all npm run test"
  },
  "dependencies": {
    "intl-messageformat": "^9.9.2"
  },
  "peerDependencies": {
    "@types/react": "^17.0.5",
    "react": "^17.0.2"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.1",
    "@types/node": "^16.10.1",
    "@types/react": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "ava": "^3.15.0",
    "eslint": "^7.32.0",
    "global-jsdom": "^8.2.0",
    "jsdom": "^17.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.4.1",
    "react": "*",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  },
  "files": [
    "dist",
    "react.d.ts",
    "react.js"
  ]
}
